<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_share_dialog"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="14dp"
                android:text="分享到"
                android:textColor="#333333"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:id="@+id/hsv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_weixin"
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:clickable="true"
                            android:drawableTop="@mipmap/share_weixin_icon"
                            android:drawablePadding="10dp"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="微信好友"
                            android:textColor="#666666"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_pyq"
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:clickable="true"
                            android:drawableTop="@mipmap/share_pyq_icon"
                            android:drawablePadding="10dp"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="朋友圈"
                            android:textColor="#666666"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_copy"
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:clickable="true"
                            android:drawableTop="@mipmap/copy_icon"
                            android:drawablePadding="10dp"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="复制链接"
                            android:textColor="#666666"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_zfb"
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:clickable="true"
                            android:drawableTop="@mipmap/zfb_icon"
                            android:drawablePadding="10dp"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="支付宝好友"
                            android:textColor="#666666"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_zfb_life"
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:clickable="true"
                            android:drawableTop="@mipmap/zfb_life_icon"
                            android:drawablePadding="10dp"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="支付宝动态"
                            android:textColor="#666666"
                            android:textSize="11sp" />
                    </LinearLayout>


                </HorizontalScrollView>

                <View
                    android:id="@+id/blurring_view"
                    android:layout_width="68dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/blurring_shape" />
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efeff4" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="取消"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@android:color/transparent" />
</LinearLayout>